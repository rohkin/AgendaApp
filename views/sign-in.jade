doctype html
html(lang="nl")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title= title
		link(rel="stylesheet", href="/assets/css/bootstrap.min.css")
		link(rel="stylesheet", href="/assets/css/app.css")
		link(rel="stylesheet", href="/assets/css/font-awesome.min.css")
	body.margin_top_20px
		div.container
			div.row(style="margin-top: 5px")
				h1.col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1.text-center Agenda App
				div.well.col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1
					if message.length !== 0
						div.alert.alert-danger
							i.fa.fa-info-circle
							| &#160;#{message}
					form.form-horizontal(method="post")
						div.form-group
							label.control-label.col-xs-4 Gebruikersnaam
							div.col-xs-8
								input.form-control(id="username", name="username", required)
						div.form-group
							label.control-label.col-xs-4 Wachtwoord
							div.col-xs-8
								input.form-control(id="password", name="password", required, type="password")
						div.form-group
							div.col-xs-4.col-xs-offset-4
								button.btn.btn-primary(type="submit")
									i.fa.fa-location-arrow
									| &#160;Aanmelden
			div.row
				div.col-md-offset-3.col-md-6.col-xs-10.col-xs-offset-1.footer
			div.row
				div.col-md-9
					small.pull-right.text-muted versie #{version}
		script(src="/assets/js/jquery.min.js")
		script(src="/assets/js/bootstrap.min.js")
		script(src="/assets/js/sign-in.js")